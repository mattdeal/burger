<div class="col-xs-12 col-md-6">
    <ol id="new-burgers">
        {{#each burgers}}
            {{#unless this.devoured}}
                <li id="{{this.id}}">{{this.burger_name}}</li>
            {{/unless}}
        {{/each}}
    </ol>
</div>
<div class="col-xs-12 col-md-6">
    <ol id="old-burgers">
        {{#each burgers}}
            {{#if this.devoured}}
                <li id="{{this.id}}">{{this.burger_name}}</li>
            {{/if}}
        {{/each}}
    </ol>
</div>